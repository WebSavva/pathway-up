{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@pathway-up/dtos": ["./node_modules/@pathway-up/dtos/src/index.js"],
      "@pathway-up/dtos/*": ["./node_modules/@pathway-up/dtos/src"],
    }
  }
}
